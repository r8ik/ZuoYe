.search {
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  width: 100%;
  height: 100rpx;
  background-color: #c00000;
  z-index: 99999;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.search-input {
  width: 100%;
  text-align: center;
  background-color: #fff;
  height: 72rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  color: #000;
}